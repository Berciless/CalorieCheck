<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:textAlignment="center"

        android:id="@+id/newFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:hint="@string/name"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/grams_of_protein"
            android:textAlignment="textEnd"
            android:id="@+id/newFoodProteins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/protein"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/grams_of_carbohidrates"
            android:textAlignment="textEnd"
            android:id="@+id/newFoodCarbs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carbs"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/grams_of_fat"
            android:textAlignment="textEnd"
            android:id="@+id/newFoodFats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fat"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <EditText
            android:textAlignment="textEnd"
            android:id="@+id/newFoodCalories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/will_be_aproximated_if_empty"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/caloreis"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/confirm_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm" />
</LinearLayout>
